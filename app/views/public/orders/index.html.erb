<div class="container">
<h2 class="head-line">注文履歴一覧</h2>
  <table class="table table-hover table-bordered table-condensed">
    <thead>
      <tr  class="table-active info">
        <th class="border border-dark">注文日</th>
        <th class="border border-dark">配送先</th>
        <th class="border border-dark">注文商品</th>
        <th class="border border-dark">支払金額</th>
        <th class="border border-dark">ステータス</th>
        <th class="border border-dark">注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td class="border border-dark">
    		  <%= l order.created_at, format: :short %>
    		</td>
    		<td class="text-left border border-dark">
    		  <%= order.postal_code %><br>
    		  <%= order.address %><br>
    		  <%= order.name %>
    		</td>
    		<td class="border border-dark">
    		  <% order.order_items.each do |order_item| %>
    		    <%= order_item.item.name %><br>
    	    <% end %>
    		</td>
    		<td class="text-right border border-dark">
    		  <%= order.total_payment.to_s(:delimited) %>円
    		</td>

    		<td class="border border-dark">
    		  <%= order.status %>
    		</td>
        <td class="border border-dark">
       	  <%= link_to "表示する", order_path(order), class: "btn btn-primary" %>
       	</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>