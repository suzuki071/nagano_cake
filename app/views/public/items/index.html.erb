<div class="container my-5">
  <div class="row">
    
    <div class="col-md-2">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genres| %>
          <tr>
            <td><%= genres.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="col-md-9">
      
      <div class="my-3">
        <h4>商品一覧</h4>
      </div>
      
      <div class="row">
        <% @items.each do |items| %>
        <div class="col-md-3 px-10">
          <%= link_to item_path(items.id) do %>
            <%= attachment_image_tag items, :image, format: 'jpeg', fallback: "no_image.jpg", size:"150x150" %>
          <% end %>
          <div class="my-3">
            <%= items.name %>
          </div>
          <div class="my-3">
            ¥<%= items.price.to_s(:delimited) %>
          </div>
        </div>
        <% end %>
      </div>
      
      <div class="row mt-5">
    <div class="col float-center">
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#">Next</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="#" tabindex="-1">Last</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
      
    </div>
  </div>
</div>