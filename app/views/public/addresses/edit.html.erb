<div class="container-xxl mt-5 mx-5">

  <h3><mark>配送先編集</mark></h3>

  <div class="deliver-destination-edit row mt-5" style="margin-left: 0; margin-right: 0; padding-left: 0;">
    <%= form_with model: @address, url: address_path(@address), class: "col-12", local: true do |f| %>
      <%= f.label "郵便番号(ハイフンなし)", class: "col-2 mr-3" %>
      <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "1500041", class: "col-2" %>
      <div class="w-100"></div>
      <%= f.label "住所", class: "col-2 mr-3" %>
      <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区神南1-19-11", class: "col-4" %>
      <div class="w-100"></div>
      <%= f.label "宛名", class: "col-2 mr-3" %>
      <%= f.text_field :name, autocomplete: "name", placeholder: "山田花子", class: "col-2" %>
      <%= f.submit "変更内容を保存", class: "btn btn-success", class: "btn btn-success col-2 offset-md-2" %>
    <% end %>
  </div>
</div>