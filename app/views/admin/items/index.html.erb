<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <h2 class="float-left">商品一覧</h2>
      <%= link_to " + ", new_admin_item_path, class:"btn btn-outline-dark float-right" %>
    </div>
  </div>

  <div class="row mt-5">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |items| %>
          <tr>
            <td>
              <%= items.id %>
            </td>
            <td>
              <%= link_to items.name, admin_item_path(items.id) %>
            </td>
            <td>
              <%= items.price %>
            </td>
            <td>
              
            </td>
            <td>
              <%= items.is_active?? '販売中': '販売停止中' %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
  </div>
  <div class="row mt-5">
    <div class="col float-center">
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#">Next</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="#" tabindex="-1">Last</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
 </div>