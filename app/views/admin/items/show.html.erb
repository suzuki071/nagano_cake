<div class="container my-5">
  <div class="row">
    <div class="offset-sm-2 col-sm-8 my-3">
      <h4>商品詳細</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "no_image.jpeg", size:"300x300" %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td><%= @item.price %> 円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= @item.is_active?? '販売中': '販売停止中' %></td>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
  </div>

</div>