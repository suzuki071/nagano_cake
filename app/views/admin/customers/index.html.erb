<div class="container my-5">
  <div class="row">
    <div class="offset-sm-1 col-sm-10 my-3">
      <h4>会員一覧</h4>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-2 col-sm-8 my-3">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customers| %>
          <tr>
            <td>
              <%= customers.id %>
            </td>
            <td>
              <%= link_to customers.last_name, admin_customer_path(customers.id) %>
            </td>
            <td>
              <%= customers.email %>
            </td>
            <td>
              <%= customers.is_active?? '退会済み': '有効' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col float-center">
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#">Next</a>
          </li>
          <li class="page-item">
            <a class="page-link" href="#" tabindex="-1">Last</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>

</div>